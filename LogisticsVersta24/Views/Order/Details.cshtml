@model LogisticsVersta24.Models.Order

@{
    ViewData["Title"] = "Детали заказа";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Детали заказа</h1>

<div>
    <h4>Заказ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Номер заказа
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Город отправителя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FromCity)
        </dd>
        <dt class="col-sm-2">
            Адрес отправителя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FromAddress)
        </dd>
        <dt class="col-sm-2">
            Город получателя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToCity)
        </dd>
        <dt class="col-sm-2">
            Адрес получателя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToAddress)
        </dd>
        <dt class="col-sm-2">
            Вес груза (г)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WeightInGrams)
        </dd>
        <dt class="col-sm-2">
            Дата забора груза
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReceivedDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
